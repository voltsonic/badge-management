{
  "name": "badge-management",
  "version": "1.0.2",
  "description": "a simple approach to badge management in any project",
  "scripts": {
    "build": "npm run clean && npm run lint && tsc",
    "changelog": "conventional-changelog -p angular -u",
    "changelog:update": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "clean": "(rm -r ./.nyc_output || true) && (rm -r ./coverage || true) && (rm -r ./dist || true)",
    "clean:all": "npm run clean && (rm -r ./node_modules || true)",
    "cover": "nyc npm run test",
    "cover:check": "nyc --check-coverage npm run test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint src/**/*.ts test/**/*.ts",
    "preversion": "npm run build && npm run cover:check",
    "postversion": "git push && git push --tags",
    "prepare": "npm run build",
    "test": "mocha",
    "upgrade": "npx npm-check -u",
    "version": "npm run build && npm run changelog:update"
  },
  "bin": {
    "badge-management": "./dist/CommandLine/BadgeManagementCLI.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voltsonic/badge-management.git"
  },
  "keywords": [
    "readme badges",
    "badges",
    "shields",
    "local badges",
    "local shields"
  ],
  "author": "voltsonic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/voltsonic/badge-management/issues"
  },
  "homepage": "https://github.com/voltsonic/badge-management#readme",
  "dependencies": {
    "badgen": "^3.2.2",
    "chai-fs": "^2.0.0",
    "detect-newline": "^3.1.0",
    "find-up": "^5.0.0",
    "is-installed-globally": "^0.4.0",
    "sharp": "^0.27.0",
    "tmp": "^0.2.1",
    "sitka": "^1.0.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.14",
    "@types/chai-fs": "^2.0.2",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.22",
    "@types/sharp": "^0.27.1",
    "chai": "^4.2.0",
    "mocha": "^8.2.1",
    "ts-mocha": "^8.0.0",
    "typescript": "^4.1.3",
    "version-management": "^1.0.7",
    "conventional-changelog-cli": "^2.0.12",
    "coveralls": "^3.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^9.0.0",
    "tslint": "^6.0.0"
  }
}
